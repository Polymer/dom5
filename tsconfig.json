    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2017"
    ],
    "outDir": "./lib",
  },
  "include": [
    "src/**/*.ts",
  ]
}
